# =============================================================================
# Portal AutoDev - Variaveis de Ambiente
# Copie para .env e preencha os valores
# =============================================================================

# -----------------------------------------------------------------------------
# MongoDB
# -----------------------------------------------------------------------------
# MongoDB Atlas (producao)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net

# MongoDB Local (desenvolvimento com --profile with-mongodb)
# MONGODB_URI=mongodb://admin:admin123@mongodb:27017

MONGODB_DB_NAME=portal_autodev
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin123

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=sua-chave-secreta-mude-em-producao
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# -----------------------------------------------------------------------------
# Azure Storage
# -----------------------------------------------------------------------------
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_STORAGE_CONTAINER=portal-documentos

# Storage Local (fallback)
USE_LOCAL_STORAGE=true

# -----------------------------------------------------------------------------
# RPA - Credenciais dos Sistemas
# -----------------------------------------------------------------------------
# eLaw COGNA
ELAW_USERNAME=seu_usuario_elaw
ELAW_PASSWORD=sua_senha_elaw

# BCLegal Loft
BCLEGAL_USER=seu_usuario_bclegal
BCLEGAL_PASSWORD=sua_senha_bclegal

# Lexxy SuperSim
LEXXY_USER=seu_usuario_lexxy
LEXXY_PASSWORD=sua_senha_lexxy

# -----------------------------------------------------------------------------
# Celery / Workers
# -----------------------------------------------------------------------------
PORTAL_BEAT_SCHEDULE_MINUTES=5

# -----------------------------------------------------------------------------
# Monitoramento (Flower)
# -----------------------------------------------------------------------------
FLOWER_USER=admin
FLOWER_PASSWORD=admin123

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
